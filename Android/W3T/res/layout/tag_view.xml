<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tag_view"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
	>
		<!-- Receipt ID -->
		<TextView android:text="@string/receipt_info_id_lab"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="left"
		/>
		<TextView android:text="ID@1234"
			android:id="@+id/tag_id_txt"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="left"
		/>
		
		<!-- Receipt Date -->
		<TextView android:text="@string/receipt_info_date_lab"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="left"
		/>
		<TextView android:text="06-01-2011"
			android:id="@+id/tag_date_txt"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="left"
		/>
		
		<!-- Store name -->
		<TextView android:text="@string/receipt_info_store_name_lab"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="left"
		/>
		<TextView android:text="Wendy's"
			android:id="@+id/tag_store_name_txt"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="left"
		/>
					
		<!-- Total cost -->
		<TextView android:text="@string/receipt_info_total_lab"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="left"
		/>
		<TextView android:text="12.32USD"
			android:id="@+id/tag_total_cost_txt"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="left"
		/>
	</LinearLayout>
	
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		android:gravity="bottom"
	>
		<Button android:id="@+id/receipt_confirm_btn"
			android:text="@string/receipt_confirm_lab"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1.0"
		/>
		
		<Button android:id="@+id/receipt_reject_btn"
			android:text="@string/receipt_reject_lab"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1.0"
		/>
	
	</LinearLayout>
</LinearLayout>
