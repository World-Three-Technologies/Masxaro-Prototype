<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.W3T.app"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.NFC" />
    
    <uses-sdk android:minSdkVersion="10" />
    
	<uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <!-- the logging-in progress bar will be in this activity -->
        <activity android:name=".FrontPage"
        	android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
		<!-- This activity is intended to show the app tabs after successfully passed
			username-password check or when the app is running. -->
		<activity android:name=".AppTabs"
			android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<!-- This action is the user successfully login our system. -->
				<action android:name="com.android.W3T.app.intent.action.VALIDATION_PASSED" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>	  	  
		</activity>
		
		<!-- This is the NFC communication activity which indicates the NFC link
			is connecting after the cell phone is put close to a vendor machine. -->
		<activity android:name="NFCConnecting"
			android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="com.android.W3T.app.intent.action.NFC_DETECTED" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

    </application>
</manifest>