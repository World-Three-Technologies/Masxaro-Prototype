<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.W3T.app"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.NFC" />
    
    <uses-sdk android:minSdkVersion="10" />
    
	<uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <!-- the logging-in progress bar will be in this activity -->
        <activity android:name="main_login"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
		<!-- This activity is intended to show the user info right after successfully passed
			username-password pair check or when the app is running. The info is retrieved when 
			the user is logging in and transmit a new receipt to our system, and delete when 
			he/she logged out.-->
		<activity android:name=".user.UserInfo"
				  android:label="@string/user_info_title">
			<intent-filter>
				<!-- This action is the user successfully login our system. -->
				<action android:name="com.android.W3T.app.intent.action.VALIDATION_PASSED" />
				<!-- This action is the user logged in our system and running the app and want to 
					view his/her info. The assumption is that the users cannot edit their info
					on the mobile end.-->
				<action android:name="com.android.W3T.app.intent.action.VIEW_USER_INFO" />
				<category android:name="android.intent.category.DEFAULT" />
				
			</intent-filter>	  	  
		</activity>
		
		<!-- This activity is a logging-in view with a progress bar. 
		<activity android:name=".LoggingIn"
				  android:label="@string/logging_in_title">
			<intent-filter>
				<action android:name="com.android.W3T.app.intent.action.LOGGING" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>-->

    </application>
</manifest>